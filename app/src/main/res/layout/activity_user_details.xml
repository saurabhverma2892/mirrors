<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saurabh.mirrors.UserDetails"
    android:background="@drawable/bg_screen_gradient">

    <EditText
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/userNameInput"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/input_line"
        android:hint="Your Name"
        android:textColorHint="@color/placeholder_color"
        android:textColor="@color/placeholder_color" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/userEmailInput"
        android:layout_below="@+id/userNameInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/input_line"
        android:hint="Your Email Id"
        android:textColorHint="@color/placeholder_color"
        android:textColor="@color/placeholder_color" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/userMobileNoInput"
        android:layout_below="@+id/userEmailInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/input_line"
        android:hint="Your Mobile No."
        android:textColorHint="@color/placeholder_color"
        android:textColor="@color/placeholder_color" />

    <Button
        android:layout_width="250dp"
        android:layout_height="51dp"
        android:text="CONTINUE"
        android:id="@+id/userDetailsContinueButton"
        android:layout_below="@+id/userMobileNoInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button"
        android:textSize="15dp"
        android:textColor="#FFF" />
</RelativeLayout>
